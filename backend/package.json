{
  "name": "animeko-backend",
  "version": "1.0.0",
  "description": "Backend for Animeko - An Anime Discovery and Tracking Platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:verbose": "NODE_OPTIONS=--experimental-vm-modules jest --verbose --detectOpenHandles --forceExit --config=jest.config.js",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --detectOpenHandles --forceExit --config=jest.config.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/runtime": "^7.23.2",
    "babel-jest": "^29.7.0",
    "bcryptjs": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
